[{{ nginx_user }}]
listen = {{ __php_fpm_socket_path }}/{{ nginx_user }}.sock
listen.owner = {{ site_user }}
listen.group = {{ site_user }}
listen.mode = 0660
user = {{ site_user }}
group = {{ site_user }}
pm = ondemand
pm.process_idle_timeout = 300
pm.max_children = 10
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 10
pm.max_requests = 500
